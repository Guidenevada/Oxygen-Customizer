<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingTop="@dimen/preference_widget_focus_jump_padding_top"
    android:paddingBottom="@dimen/preference_widget_focus_jump_padding_bottom">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/jump_text"
            style="@style/PreferenceStatusText.Tiny"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:focusable="false"
            android:maxWidth="@dimen/preference_status_text_max_width"
            android:paddingStart="@dimen/preference_widget_focus_jump_margin_start"
            android:textAlignment="viewEnd" />

    </LinearLayout>

    <ImageView
        android:id="@+id/preference_widget_jump"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"
        android:layout_marginStart="@dimen/preference_widget_jump_margin_start"
        android:importantForAccessibility="no"
        android:src="@drawable/jump" />

</LinearLayout>